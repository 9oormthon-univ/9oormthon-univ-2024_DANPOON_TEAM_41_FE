<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="159dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/bg_rectangle_white_radius8_gray45_1">

    <TextView
        android:id="@+id/dialog_total_title_tv"
        android:layout_width="150dp"
        android:layout_height="57dp"
        android:text="글을 게시 하시겠어요?"
        app:layout_goneMarginTop="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/dialog_total_choose1_tv"
        android:layout_width="231dp"
        android:layout_height="29dp"
        android:text="게시하기"
        android:textColor="@color/white"
        android:layout_marginHorizontal="17dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_orange_24"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_total_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/dialog_total_choose2_tv"
        android:layout_width="231dp"
        android:layout_height="29dp"
        android:text="취소"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_rectangle_white_stroke_gray60_1px"
        app:layout_constraintTop_toBottomOf="@id/dialog_total_choose1_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
