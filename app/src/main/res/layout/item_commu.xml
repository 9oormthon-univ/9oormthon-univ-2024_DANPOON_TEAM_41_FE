<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectangle_white_8"
    android:layout_marginStart="11dp"
    android:layout_marginEnd="11dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp">

    <TextView
        android:id="@+id/item_commu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="18dp"
        android:text="맛있는 분식"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/item_commu_star_iv"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_star"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/item_commu_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_commu_title_tv"/>

    <TextView
        android:id="@+id/item_commu_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저번달에 갔을때는 3000원 이었던 것 같은데 \n오늘 갔더니 3500원 이네요?"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/item_commu_title_tv"
        app:layout_constraintStart_toStartOf="@+id/item_commu_title_tv"/>
    
    <ImageView
        android:id="@+id/item_commu_like_iv"
        android:layout_width="13dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_commu_like"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintTop_toBottomOf="@id/item_commu_body_tv"
        app:layout_constraintStart_toStartOf="@id/item_commu_body_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_commu_like_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/item_commu_like_iv"
        app:layout_constraintTop_toTopOf="@id/item_commu_like_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_commu_like_iv"/>

    <ImageView
        android:id="@+id/item_commu_comment_iv"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="@drawable/ic_commu_comment"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/item_commu_like_num_tv"
        app:layout_constraintTop_toTopOf="@id/item_commu_like_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_commu_like_iv"/>

    <TextView
        android:id="@+id/item_commu_comment_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/item_commu_comment_iv"
        app:layout_constraintTop_toTopOf="@id/item_commu_comment_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_commu_comment_iv"/>
    
    <ImageView
        android:id="@+id/item_commu_img_iv"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/img_food"
        app:layout_constraintCircleRadius="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>