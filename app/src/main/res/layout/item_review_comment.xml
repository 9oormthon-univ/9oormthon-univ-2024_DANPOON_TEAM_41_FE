<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="13dp">

    <ImageView
        android:id="@+id/item_review_comment_profile_iv"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/ic_review_profile_img"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/item_review_comment_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다갈꼬양"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="58dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_review_comment_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024.10.13"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_review_comment_name_tv"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/item_review_comment_name_tv"/>

    <TextView
        android:id="@+id/item_review_comment_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우와 맛있겠네요~"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/item_review_comment_name_tv"
        app:layout_constraintStart_toStartOf="@id/item_review_comment_name_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>