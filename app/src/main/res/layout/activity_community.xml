<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/community_back_iv"
        android:layout_width="11dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_black_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/community_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="맛있는 분식"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray40"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/community_back_iv"/>

    <ScrollView
        android:id="@+id/community_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbarThumbVertical="@color/gray65"
        android:layout_marginTop="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/community_cl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/community_profile_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_review_profile_img"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/community_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우리동네시장"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/community_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.10.13"
                android:layout_marginStart="4dp"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/community_name_tv"
                app:layout_constraintStart_toStartOf="@id/community_name_tv"/>

            <TextView
                android:id="@+id/community_body_tv"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="오늘 다녀왔어요~ 사장님이 너무 친절하시고 음식도 너무 맛있었어요 역시 맛집이라 주말에 갔더니 웨이팅이 있어서 30분 정도 기다리고 먹었습니다. 중앙시장 맛집 인정합니다!"
                app:layout_constraintTop_toBottomOf="@id/community_profile_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/community_cl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/community_body_tv">

                <ImageView
                    android:id="@+id/community_img1_iv"
                    android:layout_width="328dp"
                    android:layout_height="328dp"
                    android:src="@drawable/img_food"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/community_img2_iv"
                    android:layout_width="328dp"
                    android:layout_height="328dp"
                    android:src="@drawable/img_food"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/community_img1_iv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/community_img3_iv"
                    android:layout_width="328dp"
                    android:layout_height="328dp"
                    android:src="@drawable/img_food"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/community_img2_iv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/community_cl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/community_cl2"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/community_comment_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글 5"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/history_comment_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="48dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_review_comment"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/history_comment_rv"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/comment_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_rectangle_white_gray40_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_like"
                android:layout_marginTop="7dp"
                android:layout_marginStart="7dp"/>

            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="8.5dp"/>
        </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/comment_input_et"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:hint="댓글을 입력해주세요. . ."
                android:textColorHint="@color/gray60"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:gravity="center_vertical"
                android:background="@drawable/bg_rectangle_white26_gray40_1dp"
                android:textSize="13dp"/>

            <ImageView
                android:id="@+id/comment_send_button"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_comment_load"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp" />
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>