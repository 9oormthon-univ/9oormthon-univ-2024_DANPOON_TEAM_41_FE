<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="9dp">

    <ImageView
        android:id="@+id/item_detail_home_food_iv"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:layout_constraintCircleRadius="3dp"
        android:src="@drawable/img_food"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_detail_home_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="떡볶이"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/item_detail_home_food_iv"
        app:layout_constraintStart_toStartOf="@id/item_detail_home_food_iv"/>

    <TextView
        android:id="@+id/item_detail_home_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000원"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/item_detail_home_name_tv"
        app:layout_constraintStart_toStartOf="@id/item_detail_home_food_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>