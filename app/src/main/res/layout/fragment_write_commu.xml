<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/write_commu_back_iv"
        android:layout_width="11dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_black_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/write_commu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="글쓰기"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/write_commu_check_iv"
        android:layout_width="19dp"
        android:layout_height="13dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray40"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/write_commu_back_iv"/>

    <View
        android:id="@+id/write_commu_title_edit_view"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_rectangle_white_radius8_gray45_1"
        android:layout_marginTop="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/write_commu_title_edit_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="제목을 입력해주세요 . . ."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textColorHint="@color/gray60"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="@id/write_commu_title_edit_view"
        app:layout_constraintBottom_toBottomOf="@id/write_commu_title_edit_view"
        app:layout_constraintTop_toTopOf="@id/write_commu_title_edit_view"/>

    <EditText
        android:id="@+id/write_commut_body_et"
        android:layout_width="328dp"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bg_rectangle_white_radius8_gray45_1"
        android:hint="글을 입력해주세요 . . . (200자 이내)"
        android:minHeight="288dp"
        android:gravity="top"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray60"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_commu_title_edit_view" />
    
    <ImageView
        android:id="@+id/write_commu_plus_img1_iv"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_non_img"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/write_commut_body_et"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/write_commu_plus_img2_iv"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_non_img"
        android:layout_marginTop="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/write_commut_body_et"
        app:layout_constraintStart_toEndOf="@id/write_commu_plus_img1_iv"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/write_commu_plus_img3_iv"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_non_img"
        android:layout_marginTop="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/write_commut_body_et"
        app:layout_constraintStart_toEndOf="@id/write_commu_plus_img2_iv"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>