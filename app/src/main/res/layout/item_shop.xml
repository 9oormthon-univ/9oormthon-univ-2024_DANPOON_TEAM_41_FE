<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="15dp">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_shop_item_img_iv"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:src="@drawable/ic_shop_non"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_shop_item_name_tv"
        android:layout_width="47dp"
        android:layout_height="19dp"
        android:text="벗어두기"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/item_shop_item_img_iv"
        app:layout_constraintEnd_toEndOf="@id/item_shop_item_img_iv"
        app:layout_constraintTop_toBottomOf="@id/item_shop_item_img_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>